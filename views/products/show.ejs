<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-10 mx-auto my-4 p-3">
            <div class="card ">
                <div class="card-body">
                    <h1>
                        <%= product.name %>
                    </h1>
                    <ul>
                        <li>
                            Price : <%= product.price %>
                        </li>
                        <li>
                            Qty : <%= product.qty %>
                        </li>
                        <li>
                            Availabile : <%= product.isAvailable %>
                        </li>
                    </ul>
                    <div class="d-flex gap-2">
                        <a href="/products/<%= product.id %>/edit" class="btn btn-secondary">Edit</a>

                        <form action="/products/<%= product.id %>?_method=delete" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>