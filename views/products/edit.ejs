<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="card col-lg-6 col-md-8 col-sm-10 mx-auto my-4 p-3">
            <h1 class="text-center">Edit Product</h1>
            <form action="/products/<%= product.id %>?_method=PATCH" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name"
                        value="<%= product.name %>" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price" placeholder="Price"
                        value="<%= product.price %>" required>
                </div>
                <div class="mb-3">
                    <label for="qty" class="form-label">Qty</label>
                    <input type="number" class="form-control" id="qty" name="qty" placeholder="Quantity"
                        value="<%= product.qty %>" required>
                </div>
                <div class="mb-3">
                    <p class="form-label mb-1">Product Available</p>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="isAvailable" id="availableYes" value="true"
                            <%=product.isAvailable ? 'checked' : '' %>>
                        <label class="form-check-label" for="availableYes">Yes</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="isAvailable" id="availableNo" value="false"
                            <%=!product.isAvailable ? 'checked' : '' %>>
                        <label class="form-check-label" for="availableNo">No</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-success w-100">Submit</button>
            </form>
        </div>
    </div>