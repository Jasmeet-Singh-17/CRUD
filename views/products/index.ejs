<% layout('layouts/boilerplate') %>
    <h1 class="text-center my-2"> All Products </h1>

    <div class="row">
        <% for (let prod of allProducts) { %>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="card my-2">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= prod.name %>
                        </h5>
                        <a class="btn btn-primary" href="/products/<%= prod.id %>">More Details</a>
                    </div>
                </div>
            </div>

            <% } %>
    </div>